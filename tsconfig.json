{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "noImplicitAny": true,
    "baseUrl": "./",
    "declaration": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "declarationMap": true,
    "lib": ["ES2021.String", "dom", "esnext"],
    "sourceMap": true
  },
  "include": [
    "./src/"
  ],
  "exclude": [
    "src/client/@custom_types"
  ]
}
